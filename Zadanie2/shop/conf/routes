# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#Product routers
GET /products controllers.ProductController.getProducts
GET /productsform controllers.ProductController.getProductsForm
GET /products/:id controllers.ProductController.getProduct(id: String)
GET /productsform/:id controllers.ProductController.getProductForm(id: String)
GET /productsadd  controllers.ProductController.addProductForm
POST /productsaddhandler controllers.ProductController.addProductHandler
GET /productsupdate/:id controllers.ProductController.updateProductForm(id: String)
POST /productsupdatehandler controllers.ProductController.updateProductHandler
POST /products controllers.ProductController.addProduct
PUT /products/:id controllers.ProductController.updateProduct(id: String)
DELETE /products/:id controllers.ProductController.deleteProduct(id: String)

#Category routers
GET /categories controllers.CategoryController.getCategories
GET /categoriesform controllers.CategoryController.getCategoriesForm
GET /categories/:id controllers.CategoryController.getCategory(id: Long)
GET /categoriesform/:id controllers.CategoryController.getCategoryForm(id: String)
GET /categoriesadd controllers.CategoryController.addCategoryForm
POST /categories controllers.CategoryController.addCategory
POST /categorieshandler controllers.CategoryController.addCategoryHandler
PUT /categories/:id controllers.CategoryController.updateCategory(id: String)
GET /categoriesupdate/:id controllers.CategoryController.updateFormCategory(id: String)
POST /categorieshandlerupdate controllers.CategoryController.updateCategoryHandler
DELETE /categories/:id controllers.CategoryController.deleteCategory(id: String)

#Address routers
GET /address controllers.AddressController.getAddresses
GET /addressform controllers.AddressController.getAddressesForm
GET /address/:id controllers.AddressController.getAddress(id: String)
GET /addressform/:id controllers.AddressController.getAddressForm(id: String)
GET /addressaddform controllers.AddressController.addAddressForm
POST /addressaddhandler controllers.AddressController.addAddressHandler
GET /addressupdateform/:id controllers.AddressController.updateAddressForm(id: String)
POST /addressupdatehandler controllers.AddressController.updateAddressHandler
POST /address controllers.AddressController.addAddress
PUT /address/:id controllers.AddressController.updateAddress(id: String)
DELETE /address/:id controllers.AddressController.deleteAddress(id: String)
